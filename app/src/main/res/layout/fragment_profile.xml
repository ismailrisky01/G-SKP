<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/tool"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/toolbar"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="PROFILE"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"></TextView>
        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tool"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:background="@drawable/blue_dark_background"
        android:layout_height="match_parent">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
    </LinearLayout>
    </LinearLayout>
//----------------

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/blue_profile_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:id="@+id/relativeLayout">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="50dp">


                <TextView
                    android:id="@+id/nama_profile"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Example S.Pdi" />


                <TextView
                    android:id="@+id/nama_jabatan_profile"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengolah Data" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/nip"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="NIP" />

                    <TextView
                        android:id="@+id/nip_profile"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="198512052015032001" />

                    <TextView
                        android:id="@+id/ttl"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="TTL" />

                    <TextView
                        android:id="@+id/ttl_profile"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="SORONG, 05-12-1985" />

                    <TextView
                        android:id="@+id/no_telp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="NO TELP" />

                    <TextView
                        android:id="@+id/notelp_profile"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="081234567890" />


                    <TextView
                        android:id="@+id/email"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="EMAIL" />

                    <TextView
                        android:id="@+id/email_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Staff@gmail.com" />


                    <TextView
                        android:id="@+id/alamat"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="ALAMAT" />

                    <TextView
                        android:id="@+id/alamat_profile"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Malang" />


                    <TextView
                        android:id="@+id/golongan"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GOLONGAN" />

                    <TextView
                        android:id="@+id/nama_golongan_profile"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="II/a" />


                    <TextView
                        android:id="@+id/atasan"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="ATASAN LANGSUNG" />

                    <TextView
                        android:id="@+id/jabatan_penilai_profile"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="KEPALA SUB BIDANG DATA DAN INFORMASI" />


                    <TextView
                        android:id="@+id/namaatasan"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="NAMA ATASAN" />

                    <TextView
                        android:id="@+id/nama_penilai_profile"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RONALD YUNUS NOYA, S.SI." />

                </LinearLayout>



            </LinearLayout>



        </RelativeLayout>
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tool"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:src="@drawable/thinking"
            android:background="@drawable/circle_profile"
            android:backgroundTint="@color/white"
            android:elevation="4dp" />
        <ImageView

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/tool"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/thinking"
            android:background="@drawable/circle_profile"
            android:elevation="4dp" />

</RelativeLayout>

</LinearLayout>